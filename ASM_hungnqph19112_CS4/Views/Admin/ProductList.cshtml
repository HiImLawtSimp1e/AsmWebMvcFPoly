@using ASM_hungnqph19112_CS4.Data;
@using X.PagedList.Mvc.Core;

@model X.PagedList.IPagedList<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<h2>Product List</h2>

@Html.ActionLink("Create","ProductCreate","Admin")

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th>
                ImageUrl
            </th>
            <th>
                Price
            </th>
            <th>
                CategoryId
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.ActionLink("Edit","ProductUpdate",new {id = item.Id})
                </td>
                <td>
                    @Html.ActionLink("Delete","ProductDelete",new {id = item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("ProductList", new {page = page}),
    new X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses = new List<string> {"page-item"},
    PageClasses = new List<string> {"page-link"}

    })
</div>
